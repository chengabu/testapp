<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/url_config_layout_url" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/config_num_of_request"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:inputType="textUri" />
        <Button android:id="@+id/url_config_layout_button"
            android:text="@string/url_config_layout_button_add"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/url_config_layout_listview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </ListView>

</LinearLayout>